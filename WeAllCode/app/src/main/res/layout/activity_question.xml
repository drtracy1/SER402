<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ser402team.weallcode.QuestionActivity"
    android:background="@drawable/bgscene_edit">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returnButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/sliderarrowleft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Press &quot;Next Question&quot; to Start!"
        android:id="@+id/questionTextField"
        android:layout_marginTop="50dp"
        android:paddingBottom="50dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/answer1"
        android:onClick="onClick"
        android:clickable="true"
        android:paddingBottom="50dp"
        android:layout_below="@+id/questionTextField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:onClick="onClick"
        android:clickable="true"
        android:id="@+id/answer2"
        android:paddingBottom="50dp"
        android:layout_below="@+id/answer1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:onClick="onClick"
        android:clickable="true"
        android:id="@+id/answer3"
        android:layout_below="@id/answer2"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/correct"
        android:layout_below="@id/answer3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:id="@+id/nextQuestionButton"
        android:src="@drawable/generic_reedit"
        android:layout_alignTop="@+id/chatIconButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatIconButton"
        android:src="@drawable/chaticon_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/questionTextField"
        android:layout_alignEnd="@+id/questionTextField" />

</RelativeLayout>
