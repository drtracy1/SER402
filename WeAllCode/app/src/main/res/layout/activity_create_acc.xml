<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ser402team.weallcode.CreateAccActivity"
    android:background="@drawable/bgrainbow_edit">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        >

        <!-- new user enters a unique username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editNameLabel"
            android:gravity="center"
            android:text="User Name"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editName"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editNameLabel" />

        <!-- user enters a unique email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editEmailLabel"
            android:gravity="center"
            android:text="Email"
            android:layout_below="@+id/editName"
            android:paddingTop="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editEmail"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editEmailLabel" />

        <!-- user enters a password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPasswordLabel1"
            android:gravity="center"
            android:text="Password"
            android:layout_below="@+id/editEmail"
            android:paddingTop="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editPasswordLabel1"/>

        <!-- user confirms password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPasswordLabel2"
            android:gravity="center"
            android:text="Confirm Password"
            android:layout_below="@+id/editPassword1"
            android:paddingTop="7dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editPassword2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editPasswordLabel2"/>

    </RelativeLayout>

    <!-- done checks user credentials -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/buttonDone"
        android:src="@drawable/accept"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
