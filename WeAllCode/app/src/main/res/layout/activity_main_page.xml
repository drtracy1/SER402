<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ser402team.weallcode.MainPageActivity"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false"
    android:background="@drawable/bgrainbow_edit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/relativeLayout"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Username"
            android:id="@+id/mainPageUsernameView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:src="@drawable/dialogueboxbanner_play"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avatar"
        android:id="@+id/avatarButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:onClick="goToAvatar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_alignLeft="@+id/avatarButton"
        android:layout_alignStart="@+id/avatarButton"
        android:onClick="goToSettings"
        android:layout_below="@+id/avatarButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/aUbutton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/settingsButton"
        android:layout_alignLeft="@+id/settingsButton"
        android:layout_alignStart="@+id/settingsButton"
        android:layout_marginTop="28dp"
        android:onClick="goToAboutUs" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logOutButton"
        android:onClick="logOut"
        android:layout_below="@+id/aUbutton"
        android:layout_alignRight="@+id/aUbutton"
        android:layout_alignEnd="@+id/aUbutton"
        android:layout_marginTop="37dp" />

</RelativeLayout>